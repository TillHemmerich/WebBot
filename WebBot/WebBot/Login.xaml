<Window x:Class="WebBot.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebBot"
        mc:Ignorable="d"
        Name="Loginwindow"
        Title="Login" Height="120" Width="300" ResizeMode="NoResize" WindowStyle="None" BorderBrush="#FFD4D4D4" BorderThickness="1,0,1,1" ShowInTaskbar="False">
    <Grid Height="118" VerticalAlignment="Bottom">
        <Button x:Name="button_login" Content="Login" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Label x:Name="label_username" Content="Benutzername:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="textBox_username" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="10,36,0,0" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10,86,0,10" Width="120" VerticalContentAlignment="Center"/>
        <Label x:Name="label_password" Content="Passwort:" HorizontalAlignment="Left" Margin="10,0,0,32" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
